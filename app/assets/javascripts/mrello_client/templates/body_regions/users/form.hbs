<form class="form-horizontal">
  <header class="text-center">
    <h2>Register</h2>
  </header>
  
  <div class="control-group">
    <label class="control-label" for="inputFullname">Fullname</label>
    <div class="controls">
      <input type="text" id="inputFullname" placeholder="Alice Doe">
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="inputEmail">Email</label>
    <div class="controls">
      <input type="text" id="inputEmail" placeholder="email@ex.com">
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="inputPassword">Password</label>
    <div class="controls">
      <input type="password" id="inputPassword" placeholder="Password">
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <button id="submit-registration" type="submit" class="btn btn-primary">Register</button>
      <a id="navigate-to-login" class="btn" href="#">Login</a>
    </div>
  </div>
</form>